.section-utama
	min-height 100vh
.swiper-container
	height 100vh
	z-index 2
.swiper-slide-1
	background url("../img/1.jpg") center / cover no-repeat
.swiper-slide-2
	background url("../img/2.jpg") center / cover no-repeat
.swiper-slide-3
	background url("../img/2.jpg") center / cover no-repeat
.swiper-slide-4
	background url("../img/2.jpg") center / cover no-repeat
.swiper-slide-5
	background url("../img/2.jpg") center / cover no-repeat
.swiper-slide
