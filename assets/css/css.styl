// init
body
	font-size 24px
.no-margin
	margin 0
.no-padding
	padding 0
$sand = "Quicksand", Helvetica
$rale = "Raleway", Helvetica
$oxygen = "Oxygen", Helvetica
$patua = "Patua one", Helvetica
$right = "Righteous", Helvetica //boldnya mantap
$black = #2C3E50;
$red = #E74C3C;
$white = #ECF0F1;
$blue = #3498DB;
$darkBlue = #2980B9;


h1, h2, h4
	font-family $patua

.parent-section1
	max-width 1200px
	margin 35px auto

.navigasi
	display flex
	flex-direction row
	justify-content space-between
	flex-start end
.item-nav
	text-align center
	font-size 0.7em
	font-family $patua
	> button
		padding 15px 25px
		background-color white
		border-radius 500px
		border 2px solid $black
.jumbo-1
	margin 30px 0
	color $white
	position relative
	background-color transparent
	box-shadow 0px 10px 30px -3px rgba(0,0,0,0.5)
.wrapper-jumbotron
	max-width 1200px
	margin 0 auto
.wrapper-detail-jumbotron
	margin 60px 0
	> button
		margin-top 20px
		background-color #e74127
		padding 15px 25px
		color $white
		border 2px solid $white
		font-size 0.8em