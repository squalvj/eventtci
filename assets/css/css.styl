	position relative
	display flex
	justify-content center
	align-items center
	&:before
		content '';
		width 100%
		height 100%
		position absolute
		left 0
		top 0
		background-color rgba(0,0,0,0.7)
		z-index 1
	.container
		height: auto;
		z-index 99
		position relative
		color white
		.wrapper-slider
			height 350px
			margin auto 0
			> h2
				font-family $mont
				font-weight bold
				text-transform uppercase
				font-size 40px
				color tint($red,20%)
			> p
				font-family $rale
				color white
		.wrapper-detail-jumbotron
			margin 60px 0
			h4
				font-family $rale
				
			button.btn-jumbotron
				margin-top 20px
				background-color transparent
				padding 15px 25px
				color white
				border 2px solid white
				font-size 0.8em
				-webkit-transition: all .25s ease
				-moz-transition: all .25s ease
				-ms-transition: all .25s ease
				-o-transition: all .25s ease
				transition: all .25s ease
				&:hover
					background-color white
					color $red
			.red-btn
				background-color tint($red,20%) !important
				color white
				border 2px solid tint($red, 20%) !important
				&:hover
					color $red !important
					background-color white !important
					border 2px solid white !important
					
