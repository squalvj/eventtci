// init
body
	font-size 24px
.no-margin
	margin 0
.no-padding
	padding 0
$sand = "Quicksand", Helvetica
$rale = "Raleway", Helvetica
$oxygen = "Oxygen", Helvetica
$patua = "Patua one", Helvetica
$right = "Righteous", Helvetica //boldnya mantap
$black = #2C3E50;
$red = #E74C3C;
// $white = #ECF0F1;
$white = white;
$blue = #3498DB;
$darkBlue = #2980B9;


h1, h2, h4
	font-family $patua

.parent-section1
	max-width 1200px
	margin 35px auto

.navigasi
	display flex
	flex-direction row
	justify-content space-between
	flex-start end
.item-nav
	text-align center
	font-size 0.7em
	font-family $patua
	position relative
	> button
		padding 15px 25px
		background-color $red
		color $white
		letter-spacing 2px
		border-radius 30px 0
		border 0
		position relative
		-webkit-transition: all .25s ease
		-moz-transition: all .25s ease
		-ms-transition: all .25s ease
		-o-transition: all .25s ease
		transition: all .25s ease
		&:hover
			border-radius 0
			&:after
				width 100%
		&:after
			content '';
			width 0%;
			height 5px;
			position absolute
			background-color $red
			bottom -10px
			left 0
			-webkit-transition: all .25s ease
			-moz-transition: all .25s ease
			-ms-transition: all .25s ease
			-o-transition: all .25s ease
			transition: all .25s ease
		
.jumbo-1
	margin 30px 0
	color $white
	position relative
	background-color transparent
	box-shadow 0px 10px 30px -3px rgba(0,0,0,0.5)
	overflow hidden
.wrapper-jumbotron
	max-width 1200px
	margin 0 auto
	> h2
		font-family $sand
		font-weight bold
.wrapper-detail-jumbotron
	margin 60px 0
	> button
		margin-top 20px
		background-color #e74127
		padding 15px 25px
		color $white
		border 2px solid $white
		font-size 0.8em
#section2
	margin 30px 0
	> h4
		font-family $rale
		line-height 25px