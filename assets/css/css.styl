// init
body
	font-size 24px
.no-margin
	margin 0
.no-padding
	padding 0
$sand = "Quicksand", Helvetica
$rale = "Raleway", Helvetica
$oxygen = "Oxygen", Helvetica
$patua = "Patua one", Helvetica
$mont = "Montserrat", Helvetica
$right = "Righteous", Helvetica //boldnya mantap
$montserrat = "Montserrat", Helvetica
$black = #2C3E50;
$red = #E74C3C;
$rubick = 'Rubik Mono One', Helvetica
// $white = #ECF0F1;
$white = white;
$blue = #3498DB;
$darkBlue = #2980B9;
$redt = tint($red, 20%)
$asphalt = #333

h1, h2, h4
	font-family $patua
.white
	color white
	
// navbar 
$primary = #37ca7e;
$secondary = white//#43a6dd; //ini warna background nav
$transitionSpeed = 0.4s;
.navbar
	border none
	transition $transitionSpeed
	&-brand
		font-size 2.25rem
		font-weight 900
		color #4b4b4b
	&--size
		&--xl
			padding 2rem 0
		&--lg
			padding 2rem 0
		&--md
			padding 1rem 0
	    &--sm
			padding 0
	&--color
		&--white
			background white
		&--primary
			background $primary
		&--secondary
			background $secondary
			box-shadow 0px -5px 25px rgba(0,0,0,0.7)
			.navbar-toggle
				&:hover
					.icon-bar
						background-color white
			.icon-bar
				background-color $red
			button
				color $redt !important
				&:before
					content ''
					position absolute
					width 100%
					-webkit-transition: all .25s ease
					-moz-transition: all .25s ease
					-ms-transition: all .25s ease
					-o-transition: all .25s ease
					transition: all .25s ease
					height 0%
					background-color $redt
					left 0
					top 0
				&:hover
					color white !important
					&:before
						height 100%
						z-index -1
		&--ghost
			background transparent
	  		.navbar-brand,
			.navbar-text,
			a 
				color white     
.navbar-brand
	margin-top -15px   
      
.icon-bar
	background-color white
	
.overlay
	position absolute
	z-index -1
	top 0
	left 0
	height 100%
	width 100%
	background rgba(#000, 0.6)

.scrolled
	width 100%
	-webkit-transition: all .50s ease
	-moz-transition: all .50s ease
	-ms-transition: all .50s ease
	-o-transition: all .50s ease
	transition: all .50s ease 
	transform translateY(100)
	position fixed
	top 0;
	left 0
	height 120px
	background-color lightblue 
	
.nav-up
	top -130px

#section1
	-webkit-transition: all .50s ease
	-moz-transition: all .50s ease
	-ms-transition: all .50s ease
	-o-transition: all .50s ease
	transition: all .50s ease 
	position fixed
	width 100%
.parent-section1
	max-width 1200px
	margin 35px auto

.navigasi
	display flex
	flex-direction row
	justify-content space-between
	flex-start end
	width 65%
	@media (max-width: 550px)
		flex-direction column
		width 100%
		padding-top 20px
.item-nav
	text-align center
	font-size 0.6em
	font-family $montserrat
	position relative
	@media (max-width: 550px)
		text-align left
	> button
		padding 15px 25px
		background-color transparent
		color white
		letter-spacing 2px
		border none
		position relative
		-webkit-transition: all .25s ease
		-moz-transition: all .25s ease
		-ms-transition: all .25s ease
		-o-transition: all .25s ease
		transition: all .25s ease
		font-size 1em
		text-transform uppercase
		&:before
			content ''
			position absolute
			width 100%
			-webkit-transition: all .25s ease
			-moz-transition: all .25s ease
			-ms-transition: all .25s ease
			-o-transition: all .25s ease
			transition: all .25s ease
			height 0%
			background-color $redt
			left 0
			top 0
		&:hover
			color white
			&:before
				height 100%
				z-index -1
		

#section2
